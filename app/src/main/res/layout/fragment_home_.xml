<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/roo_Fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ui.Patient_all.Nav_Fragment_P.Home_Fragment">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_190sdp"
        android:background="@drawable/bg_half_rounded"
        android:backgroundTint="@color/Patient_Color" />

    <TextView
        android:id="@+id/HP_welcome_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_70sdp"
        android:fontFamily="@font/cairo_bold"
        android:text="@string/Welcome_text"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp" />

    <View
        android:id="@+id/view2"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="5dp"
        android:layout_below="@id/HP_welcome_txt"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/bg_search" />

    <TextView
        android:id="@+id/HP_patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_marginEnd="@dimen/_112sdp"
        android:fontFamily="@font/cairo_bold"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/HP_profile_img"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:contentDescription="@string/todo"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="@dimen/_2sdp" />

    <ImageView
        android:id="@+id/HP_notification"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:background="@drawable/ic_notification"
        android:backgroundTint="@color/white_ghost"
        android:contentDescription="@string/todo"
        android:elevation="3dp"
        app:civ_border_width="3dp" />

    <EditText
        android:id="@+id/HP_search_input"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@id/view2"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@drawable/search_input_style"
        android:drawableEnd="@drawable/ic_search"
        android:drawablePadding="10dp"
        android:elevation="@dimen/_2sdp"
        android:fontFamily="@font/cairo_semibold"
        android:hint="|  أتبحث عن طبيب ؟"
        android:iconifiedByDefault="false"
        android:inputType="textPersonName"
        android:queryBackground="@android:color/transparent"
        android:textColor="@color/gray"
        android:textDirection="rtl"
        android:textSize="@dimen/_10sdp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/HP_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/HP_search_input"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent" />

</RelativeLayout>