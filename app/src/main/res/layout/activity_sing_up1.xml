<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Sing_up_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_sing_up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="@dimen/dp40"
            android:background="@drawable/ic_arrow_back"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/cairo_bold"
            android:text="اخبرنا عن نفسك"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Subject"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_below="@id/Sing_up_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp10"
        app:layout_constraintBottom_toTopOf="@id/Sing_up_header_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Sing_up_header">

        <EditText
            android:id="@+id/edit_text_name"
            android:layout_width="347dp"
            android:layout_height="51dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_edit_text"
            android:elevation="2dp"
            android:ems="1"
            android:fontFamily="@font/cairo_bold"
            android:hint="الاسم"
            android:maxLines="1"
            android:paddingRight="20dp"
            android:textColor="@color/Doctor_Color"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="347dp"
            android:layout_height="51dp"
            android:layout_below="@id/edit_text_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_edit_text"
            android:elevation="2dp"
            android:ems="1"
            android:fontFamily="@font/cairo_bold"
            android:maxLines="1"
            android:paddingRight="20dp"
            android:textColor="@color/Doctor_Color"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edit_text_data"
            android:layout_width="347dp"
            android:layout_height="51dp"
            android:layout_below="@id/spinner_type"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_edit_text"
            android:elevation="2dp"
            android:ems="1"
            android:fontFamily="@font/cairo_bold"
            android:hint="تاريخ الميلاد"
            android:maxLines="1"
            android:paddingRight="20dp"
            android:textColor="@color/Doctor_Color"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edit_text_whight"
            android:layout_width="347dp"
            android:layout_height="51dp"
            android:layout_below="@id/edit_text_data"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_edit_text"
            android:elevation="2dp"
            android:ems="1"
            android:fontFamily="@font/cairo_bold"
            android:hint="الوزن"
            android:maxLines="1"
            android:paddingRight="20dp"
            android:textColor="@color/Doctor_Color"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edit_text_tall"
            android:layout_width="347dp"
            android:layout_height="51dp"
            android:layout_below="@id/edit_text_whight"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_edit_text"
            android:elevation="2dp"
            android:ems="1"
            android:fontFamily="@font/cairo_bold"
            android:hint="الطول"
            android:maxLines="1"
            android:paddingRight="20dp"
            android:textColor="@color/Doctor_Color"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edit_text_National_ID"
            android:layout_width="347dp"
            android:layout_height="51dp"
            android:layout_below="@id/edit_text_tall"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_edit_text"
            android:elevation="2dp"
            android:ems="1"
            android:fontFamily="@font/cairo_bold"
            android:hint="رقم الهوية"
            android:paddingRight="20dp"
            android:textColor="@color/Doctor_Color"
            android:textSize="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Sing_up_header_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/Subject"
        android:background="@drawable/bg_sing_up_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:src="@drawable/ic_float_action"
            app:borderWidth="0dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            app:dotsColor="@color/white_smoke"
            app:dotsCornerRadius="6dp"
            app:dotsSize="16dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="2.5"
            app:progressMode="true"
            app:selectedDotColor="@color/white" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>