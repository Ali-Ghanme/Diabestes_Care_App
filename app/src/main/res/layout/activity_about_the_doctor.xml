<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Patient_Color"
    tools:context=".AboutTheDoctor">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_120sdp"
            android:background="@drawable/bg_bottom_sheet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/DPP_btn_back"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@android:color/transparent"
            android:layoutDirection="ltr"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:src="@drawable/ic_arrow_back_d" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_center"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_user_nav"
            android:layout_marginTop="@dimen/_60sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="68dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="د.محمد صيام| Mohammed syam"
            android:id="@+id/txt1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/circle_center"
            android:textStyle="bold"
            android:textColor="#000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:text="طب عام"
            android:id="@+id/txt2"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_below="@+id/txt1"
            android:textStyle="bold"
            android:textColor="#402E2E"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear"
            android:layout_below="@+id/txt2">
            <LinearLayout
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:background="@drawable/news_rectangel"
                android:backgroundTint="@color/Doctor_Color"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:text="+10"
                    android:id="@+id/txt3"
                    android:layout_below="@+id/txt1"
                    android:textStyle="bold"
                    android:textColor="#000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:text="سنوات خبرة"
                    android:id="@+id/txt4"
                    android:layout_below="@+id/txt1"
                    android:textStyle="bold"
                    android:textColor="#000"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_100sdp"
                android:gravity="center"
                android:layout_marginStart="@dimen/_20sdp"
                android:background="@drawable/news_rectangel"
                android:backgroundTint="@color/Doctor_Color"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:text="+10"
                    android:id="@+id/txt5"
                    android:layout_below="@+id/txt1"
                    android:textStyle="bold"
                    android:textColor="#000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:text="سنوات خبرة"
                    android:id="@+id/txt6"
                    android:layout_below="@+id/txt1"
                    android:textStyle="bold"
                    android:textColor="#000"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_100sdp"
                android:gravity="center"
                android:background="@drawable/news_rectangel"
                android:backgroundTint="@color/Doctor_Color"
                android:layout_marginStart="@dimen/_20sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:text="+10"
                    android:id="@+id/txt7"
                    android:layout_below="@+id/txt1"
                    android:textStyle="bold"
                    android:textColor="#000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:text="سنوات خبرة"
                    android:id="@+id/txt8"
                    android:layout_below="@+id/txt1"
                    android:textStyle="bold"
                    android:textColor="#000"/>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="نبذة"
            android:layout_marginEnd="@dimen/_20sdp"
            android:id="@+id/txt9"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/linear"
            android:textStyle="bold"
            android:textColor="#000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textSize="@dimen/_12sdp"
            android:text="طب عام"
            android:id="@+id/txt10"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_below="@+id/txt9"
            android:textStyle="bold"
            android:textColor="#402E2E"/>



    </RelativeLayout>
    <Button
        android:id="@+id/request_for"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/news_rectangel"
        android:backgroundTint="@color/Doctor_Color"
        android:fontFamily="@font/cairo_bold"
        android:text="إرسال طلب استشارة"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>