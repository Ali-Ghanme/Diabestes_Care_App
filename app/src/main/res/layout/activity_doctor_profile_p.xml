<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ui.Patient_all.Doctor_Profile_P">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="@drawable/bg_half_rounded"
        android:backgroundTint="@color/Patient_Color" />

    <ImageView
        android:id="@+id/HP_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@drawable/ic_arrwa"
        android:backgroundTint="@color/white_ghost"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/EP_title_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/cairo_bold"
        android:text="ملف الطبيب "
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp" />

    <View
        android:id="@+id/EP_view_p"
        android:layout_width="30dp"
        android:layout_height="5dp"
        android:layout_below="@id/EP_title_p"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_search" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/HP_profile_img"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_70sdp"
        android:contentDescription="@string/todo"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="3dp" />

    <TextView
        android:id="@+id/HP_doctor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/HP_profile_img"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/cairo_bold"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/Patient_Color"
        android:textSize="@dimen/_16sdp" />

    <ImageView
        android:id="@+id/starts"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_below="@id/HP_doctor_name"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:contentDescription="@string/todo"
        android:src="@drawable/starts_icon" />

    <View
        android:id="@+id/EP_view2_p"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/starts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="#CFCFCF" />

    <TextView
        android:id="@+id/HP_rate1"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/EP_view2_p"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/cairo_bold"
        android:lines="1"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/_13sdp"
        android:singleLine="true"
        android:text="تقييم"
        android:textColor="@color/Patient_Color"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:id="@+id/HP_result"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/EP_view2_p"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/cairo_bold"
        android:lines="1"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/_20sdp"
        android:singleLine="true"
        android:textColor="@color/Patient_Color"
        android:textSize="@dimen/_16sdp" />

    <TextView
        android:id="@+id/HP_rate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/EP_view2_p"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/cairo_bold"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="سنين الخبرة"
        android:textColor="@color/Patient_Color"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:id="@+id/HP_result2"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/EP_view2_p"
        android:layout_marginStart="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/cairo_bold"
        android:lines="1"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/_20sdp"
        android:singleLine="true"
        android:textColor="@color/Patient_Color"
        android:textSize="@dimen/_16sdp" />

    <TextView
        android:id="@+id/HP_rate3"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/EP_view2_p"
        android:layout_marginStart="@dimen/_210sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/cairo_bold"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="التوصيات"
        android:textColor="@color/Patient_Color"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:id="@+id/HP_result3"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/EP_view2_p"
        android:layout_marginStart="@dimen/_210sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/cairo_bold"
        android:lines="1"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/_20sdp"
        android:singleLine="true"
        android:textColor="@color/Patient_Color"
        android:textSize="@dimen/_16sdp" />

    <View
        android:id="@+id/EP_view3_p"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/EP_view2_p"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_60sdp"
        android:background="#CFCFCF" />


    <RelativeLayout
        android:id="@+id/head_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/EP_view3_p"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_20sdp"
            android:fontFamily="@font/cairo_bold"
            android:lines="1"
            android:text="آراء"
            android:textColor="@color/Patient_Color"
            android:textSize="@dimen/_15sdp" />

        <View
            android:layout_width="@dimen/_30sdp"
            android:layout_height="5dp"
            android:layout_below="@id/group_title"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/bg_search"
            android:backgroundTint="@color/Patient_Color" />

        <Button
            android:id="@+id/view_all"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:background="@drawable/bg_patient_button"
            android:clickable="false"
            android:focusable="false"
            android:fontFamily="@font/cairo_bold"
            android:maxLength="15"
            android:text="عرض المزيد"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold"
            tools:ignore="SmallSp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feedback_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_parent" />

    <Button
        android:id="@+id/request_for"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_p"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/news_rectangel"
        android:backgroundTint="@color/Patient_Color"
        android:fontFamily="@font/cairo_bold"
        android:text="إرسال طلب استشارة"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />

</RelativeLayout>