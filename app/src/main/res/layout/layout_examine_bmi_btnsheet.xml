<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetContier"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:background="?attr/bg_background"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_20sdp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/checked_save_height_weight"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:background="@drawable/btnext"
        android:backgroundTint="@color/Patient_Color"
        android:fontFamily="@font/cairo_bold"
        android:text="  فحص و حفظ  "
        android:textColor="@color/white"
        android:textSize="@dimen/_9sdp" />

    <TextView
        android:id="@+id/tv_title_college"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_bold"

        android:paddingBottom="@dimen/_4sdp"
        android:text="	حساب مؤشر كتلة الجسم  "
        android:textAlignment="center"
        android:textSize="@dimen/_13sdp" />


</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:backgroundTint="?attr/bg_color"
        android:background="@drawable/bg_edit_text"
        android:elevation="@dimen/_2sdp"
        android:padding="@dimen/_15sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help">


        <EditText
            android:id="@+id/et_bmi_weight"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/tv_text"
            android:background="@drawable/bg_edit_text"
            android:drawableLeft="@drawable/ic_add"
            android:backgroundTint="?attr/bg_background"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableTint="@color/gray"
            android:elevation="@dimen/_1sdp"
            android:fontFamily="@font/cairo_bold"
            android:hint="قم بإدخال  وزن الجسم بالكيلوغرام   "
            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/Doctor_Color"
            android:textColorHint="#78909C"
            android:textSize="13sp"
            tools:ignore="TextFields" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_bold"
            android:paddingBottom="@dimen/_4sdp"
            android:text=" وزن الجسم بالكيلوغرام  "
            android:textDirection="rtl"
            android:textSize="@dimen/_10sdp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/bg_edit_text"
        android:backgroundTint="?attr/bg_color"
        android:elevation="@dimen/_2sdp"
        android:padding="@dimen/_15sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help">

        <TextView
            android:id="@+id/tv_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_bold"
            android:paddingBottom="@dimen/_4sdp"
            android:text="الطول بالمتر  "
            android:textDirection="rtl"
            android:textSize="@dimen/_10sdp" />


        <EditText
            android:id="@+id/et_bmi_height"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/tv_period"
            android:background="@drawable/bg_edit_text"
            android:drawableLeft="@drawable/ic_add"
            android:drawablePadding="@dimen/_5sdp"
            android:backgroundTint="?attr/bg_background"
            android:drawableTint="@color/gray"
            android:elevation="@dimen/_1sdp"
            android:fontFamily="@font/cairo_bold"
            android:hint="قم بإدخال الطول بالمتر   "
            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/Doctor_Color"
            android:textColorHint="#78909C"
            android:textSize="13sp"
            tools:ignore="TextFields" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:elevation="@dimen/_2sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help">

        <TextView
            android:id="@+id/tv_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableRight="@drawable/ic_info"
            android:drawableTint="@color/gray"
            android:fontFamily="@font/cairo_bold"
            android:padding="@dimen/_15sdp"
            android:text="@string/indormation_bmi"
            android:textDirection="rtl"
            android:textSize="@dimen/_10sdp" />


    </RelativeLayout>




</LinearLayout>