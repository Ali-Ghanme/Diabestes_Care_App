<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sing_up_pages.Sing_Up_2">
    <RelativeLayout
        android:id="@+id/Sing_up_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/bg_sing_up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/ic_arrow_back"
            android:contentDescription="icon"
            android:minHeight="35dp"
            android:minWidth="45dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/cairo_bold"
            android:text=" معلومات الاتصال والسكن"

            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@id/Sing_up_header_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Sing_up_header"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tv_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_13sdp"
            android:fontFamily="@font/cairo_light"
            android:layoutDirection="rtl"
            android:text="معلومات السكن "
            android:textAlignment="textStart"
            android:textColor="@color/design_default_color_error"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_show1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cont_confirmpassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_13sdp"
            android:fontFamily="@font/cairo_light"
            android:layoutDirection="rtl"
            android:text="معلومات السكن "
            android:textAlignment="textStart"
            android:textColor="@color/design_default_color_error"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cont_email"
            android:layout_width="375dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/cont_name"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="@dimen/dp5"
            android:elevation="2dp"
            android:ems="1"
            android:hint="ايميل "
            android:layoutDirection="rtl"
            android:maxLines="1"
            android:textColorHint="#989696"
            app:boxCornerRadiusBottomEnd="@dimen/dp50"
            app:boxCornerRadiusBottomStart="@dimen/dp50"
            app:boxCornerRadiusTopEnd="@dimen/dp50"
            app:boxCornerRadiusTopStart="@dimen/dp50"
            app:boxStrokeWidth="0dp">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="name"
                android:background="@drawable/bg_edit_text"
                android:elevation="2dp"
                android:ems="1"
                android:fontFamily="@font/cairo_bold"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:textColor="@color/Doctor_Color"
                android:textColorHint="#78909C"
                android:textSize="15sp" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cont_password"
            android:layout_width="375dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/cont_email"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="@dimen/dp5"
            android:elevation="2dp"
            android:ems="1"
            android:hint="كلمة السر "
            android:layoutDirection="rtl"
            android:maxLines="1"
            android:textColorHint="#989696"
            app:boxCornerRadiusBottomEnd="@dimen/dp50"
            app:boxCornerRadiusBottomStart="@dimen/dp50"
            app:boxCornerRadiusTopEnd="@dimen/dp50"
            app:boxCornerRadiusTopStart="@dimen/dp50"
            app:boxStrokeWidth="0dp">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="name"
                android:background="@drawable/bg_edit_text"
                android:elevation="2dp"
                android:ems="1"
                android:fontFamily="@font/cairo_bold"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:textColor="@color/Doctor_Color"
                android:textColorHint="#78909C"
                android:textSize="15sp" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cont_confirmpassword"
            android:layout_width="375dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/cont_password"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="@dimen/dp5"
            android:elevation="2dp"
            android:ems="1"
            android:hint="تاكيد كلمة السر "
            android:layoutDirection="rtl"
            android:maxLines="1"
            android:textColorHint="#989696"
            app:boxCornerRadiusBottomEnd="@dimen/dp50"
            app:boxCornerRadiusBottomStart="@dimen/dp50"
            app:boxCornerRadiusTopEnd="@dimen/dp50"
            app:boxCornerRadiusTopStart="@dimen/dp50"
            app:boxStrokeWidth="0dp">

            <EditText
                android:id="@+id/confirmpassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="name"
                android:background="@drawable/bg_edit_text"
                android:elevation="2dp"
                android:ems="1"
                android:fontFamily="@font/cairo_bold"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:textColor="@color/Doctor_Color"
                android:textColorHint="#78909C"
                android:textSize="15sp" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cont_name"
            android:layout_width="375dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_show"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="@dimen/dp5"
            android:elevation="2dp"
            android:ems="1"
            android:hint="رقم الجوال"
            android:layoutDirection="rtl"
            android:maxLines="1"
            android:textColorHint="#989696"
            app:boxCornerRadiusBottomEnd="@dimen/dp50"
            app:boxCornerRadiusBottomStart="@dimen/dp50"
            app:boxCornerRadiusTopEnd="@dimen/dp50"
            app:boxCornerRadiusTopStart="@dimen/dp50"
            app:boxStrokeWidth="0dp">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="name"
                android:background="@drawable/bg_edit_text"
                android:elevation="2dp"
                android:ems="1"
                android:fontFamily="@font/cairo_bold"
                android:inputType="number"
                android:maxLines="1"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:textColor="@color/Doctor_Color"
                android:textColorHint="#78909C"
                android:textSize="15sp" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cont_living"
            android:layout_width="375dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_show1"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="@dimen/dp5"
            android:elevation="2dp"
            android:ems="1"
            android:hint=" المدينة"
            android:layoutDirection="rtl"
            android:maxLines="1"
            android:textColorHint="#989696"
            app:boxCornerRadiusBottomEnd="@dimen/dp50"
            app:boxCornerRadiusBottomStart="@dimen/dp50"
            app:boxCornerRadiusTopEnd="@dimen/dp50"
            app:boxCornerRadiusTopStart="@dimen/dp50"
            app:boxStrokeWidth="0dp">

            <AutoCompleteTextView
                android:id="@+id/autoComplete1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/cairo_bold"
                android:inputType="textAutoComplete"
                android:textColor="@color/Patient_Color"
                android:textDirection="rtl"
                android:textSize="15sp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cont_living1"
            android:layout_width="375dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/cont_living"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="@dimen/dp5"
            android:elevation="2dp"
            android:ems="1"
            android:hint=" المحافظة"
            android:layoutDirection="rtl"
            android:maxLines="1"
            android:textColorHint="#989696"
            app:boxCornerRadiusBottomEnd="@dimen/dp50"
            app:boxCornerRadiusBottomStart="@dimen/dp50"
            app:boxCornerRadiusTopEnd="@dimen/dp50"
            app:boxCornerRadiusTopStart="@dimen/dp50"
            app:boxStrokeWidth="0dp">

            <AutoCompleteTextView
                android:id="@+id/autoComplete2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/cairo_bold"
           android:inputType="textAutoComplete"
                android:textColor="@color/Patient_Color"
                android:textDirection="rtl"
                android:textSize="15sp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


            




        </com.google.android.material.textfield.TextInputLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Sing_up_header_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_71sdp"
        android:layout_below="@id/Subject"
        android:background="@drawable/bg_sing_up_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="@drawable/float_action_btn"
            android:drawableStart="@drawable/ic_float_action"
            android:elevation="10dp"
            android:paddingHorizontal="@dimen/_20sdp"
            app:borderWidth="0dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginEnd="132dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="30dp"
            android:layout_toStartOf="@+id/btn_next"
            app:dotsColor="@color/white_smoke"
            app:dotsCornerRadius="6dp"
            app:dotsSize="@dimen/_16sdp"
            app:dotsSpacing="@dimen/_4sdp"
            app:dotsWidthFactor="2.5"
            app:progressMode="true"
            app:selectedDotColor="@color/white" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>