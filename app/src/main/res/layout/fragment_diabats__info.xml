<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Patient_all.Setting_P.Edit_Profile_Fragmane.Diabats_Info">

    <RelativeLayout
        android:id="@+id/content_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/Weight_patient"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/cairo_bold"
                android:text="نوع المرض"
                android:textColor="@color/Patient_Color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/FD_DiabetesType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/cairo_bold"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/FD_DiabetesMedics_R"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@id/Weight_patient"
            android:layout_centerHorizontal="true"
            android:paddingLeft="20dp"
            android:paddingRight="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/cairo_bold"
                android:text="نوع العلاج"
                android:textColor="@color/Patient_Color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/FD_DiabetesMedics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/cairo_bold"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp" />

            <View style="@style/Divider.Horizontal" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/FD_PatientCauses_R"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@id/FD_DiabetesMedics_R"
            android:layout_centerHorizontal="true"
            android:paddingLeft="20dp"
            android:paddingRight="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/cairo_bold"
                android:text="عامل الإصابة"
                android:textColor="@color/Patient_Color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/FD_PatientCauses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/cairo_bold"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp" />

            <View style="@style/Divider.Horizontal" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/FD_bloodGlucoseMeter_R"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@id/FD_PatientCauses_R"
            android:layout_centerHorizontal="true"
            android:paddingLeft="20dp"
            android:paddingRight="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/cairo_bold"
                android:text="هل تملك جهاز فحص السكر"
                android:textColor="@color/Patient_Color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/FD_bloodGlucoseMeter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/cairo_bold"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp" />

            <View style="@style/Divider.Horizontal" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/FD_HaveIssue_R"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@id/FD_bloodGlucoseMeter_R"
            android:layout_centerHorizontal="true"
            android:paddingLeft="20dp"
            android:paddingRight="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/cairo_bold"
                android:text=" تاريخ الاصابة"
                android:textColor="@color/Patient_Color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/FD_HaveIssue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/cairo_bold"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp" />

            <View style="@style/Divider.Horizontal" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/FD_DateInjury_R"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@id/FD_HaveIssue_R"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/cairo_bold"
            android:paddingLeft="20dp"
            android:paddingRight="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/cairo_bold"
                android:text="أمراض اخرى "
                android:textColor="@color/Patient_Color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/FD_DateInjury"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/cairo_bold"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp" />

            <View style="@style/Divider.Horizontal" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_ic_background"
        android:fontFamily="@font/cairo_bold"
        android:text="تحديث البيانات"
        android:textColor="@color/white"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_info" />
</androidx.constraintlayout.widget.ConstraintLayout>