<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Setting.notification">
    <RelativeLayout
        android:id="@+id/notification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/bg_sing_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/cairo_bold"
            android:text=" الإشعارات "
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/notification_run"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification">


        <TextView
            android:id="@+id/notification_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawablePadding="20dp"
            android:layoutDirection="rtl"
            android:paddingBottom="@dimen/_15sdp"
            android:paddingTop="@dimen/_20sdp"
            android:text=" تشغيل الاشعارات "
            android:textAlignment="textStart"
            android:textSize="@dimen/_20sdp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:checked="true"
            android:paddingBottom="@dimen/_15sdp"
            android:paddingTop="@dimen/_20sdp"
            app:getTrackTintList="@color/Doctor_Color"

            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/notification_sound"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_run">

        <View style="@style/Divider.Horizontal" />

        <TextView
            android:id="@+id/notification_sound_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableEnd="@drawable/arrwdr"
            android:layoutDirection="rtl"
            android:paddingBottom="@dimen/_15sdp"
            android:paddingTop="@dimen/_15sdp"
            android:text="النغمة "
            android:textAlignment="textStart"
            android:textSize="@dimen/_20sdp" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/notification_up"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_sound">
        <View style="@style/Divider.Horizontal" />

        <TextView
            android:id="@+id/notification_up_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawablePadding="20dp"
            android:layoutDirection="rtl"
            android:paddingBottom="@dimen/_15sdp"
            android:paddingTop="@dimen/_20sdp"
            android:text=" اهتزاز مع نغمة "
            android:textAlignment="textStart"
            android:textSize="@dimen/_20sdp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:checked="false"
            android:paddingBottom="@dimen/_15sdp"
            android:paddingTop="@dimen/_20sdp"
            app:getTrackTintList="@color/Doctor_Color"

            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/notification_messages"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_up">

        <View style="@style/Divider.Horizontal" />

        <TextView
            android:id="@+id/notification_messages_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawablePadding="20dp"
            android:layoutDirection="rtl"
            android:paddingBottom="@dimen/_15sdp"
            android:paddingTop="@dimen/_20sdp"
            android:text=" اشعارات الرسائل  "
            android:textAlignment="textStart"
            android:textSize="@dimen/_20sdp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:checked="false"
            android:paddingBottom="@dimen/_15sdp"
            android:paddingTop="@dimen/_20sdp"
            app:getTrackTintList="@color/Doctor_Color"

            />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>