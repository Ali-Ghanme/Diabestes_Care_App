<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/item_recommended_doctor"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/bg_doctors_list"
    android:clickable="true"
    android:elevation="1.5dp"
    android:focusable="true">
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Doctor_iemage"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/ic_arrwa" />

        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/cairo_semibold"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:text="م. محمد صيام"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textDirection="rtl"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/doctor_dname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_name"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_75sdp"
            android:layout_marginStart="@dimen/_140sdp"
            android:fontFamily="@font/cairo_light"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:text="مهندس"
            android:textColor="@color/gray"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/sub_tiltel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Doctor_image"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/cairo_semibold"
            android:text="يحتوي قسم الأنظمة الغذائية على أنظمة
غذائية صحية ومتبعة عالميا خاصة لمرضى
السكري ويحتوي على فرعين
"
            android:textColor="@color/gray" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Doctor_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_200sdp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>