<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Sing_up_1_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/bg_sing_up"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/cairo_bold"
            android:scaleType="centerCrop"
            android:text="اخبرنا عن نفسك"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Subject"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_370sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Sing_up_1_header">

        <EditText
            android:id="@+id/Sing_up_1_name"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_4sdp"
            android:autofillHints="name"
            android:background="@drawable/bg_edit_text"
            android:drawableStart="@drawable/ic_user"
            android:fontFamily="@font/cairo_bold"
            android:hint="الاسم"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:scaleType="centerCrop"
            android:textColor="@color/Patient_Color"
            android:textColorHint="#78909C"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioGroup
            android:id="@+id/Sing_up_1_Gender"
            android:layout_width="@dimen/_225sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_below="@+id/Sing_up_1_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:checkedButton="@id/male"
            android:orientation="horizontal"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/gender_background_selector"
                android:button="@android:color/transparent"
                android:drawableStart="@drawable/ic_male"
                android:elevation="1.5dp"
                android:fontFamily="@font/cairo_bold"
                android:paddingLeft="@dimen/_15sdp"
                android:scaleType="centerCrop"
                android:text="ذكر"
                android:textAlignment="center"
                android:textColor="@drawable/gender_text_selector"
                android:textSize="@dimen/_15sdp"
                app:drawableTint="@drawable/gender_text_selector" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:background="@drawable/gender_background_selector"
                android:button="@android:color/transparent"
                android:drawableStart="@drawable/ic_female"
                android:elevation="1.5dp"
                android:fontFamily="@font/cairo_bold"
                android:paddingLeft="@dimen/_15sdp"
                android:scaleType="centerCrop"
                android:text="أنثى"
                android:textAlignment="center"
                android:textColor="@drawable/gender_text_selector"
                android:textSize="16sp"
                app:drawableTint="@drawable/gender_text_selector" />
        </RadioGroup>

        <EditText
            android:id="@+id/Sing_up_1_date"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/Sing_up_1_Gender"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:autofillHints="creditCardExpirationDate"
            android:background="@drawable/bg_edit_text"
            android:drawableStart="@drawable/ic_data"
            android:ems="1"
            android:fontFamily="@font/cairo_bold"
            android:hint="تاريخ الميلاد"
            android:inputType="date"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:scaleType="centerCrop"
            android:textColor="@color/Patient_Color"
            android:textColorHint="#78909C"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/Sing_up_1_wehigt"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/Sing_up_1_date"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:autofillHints="creditCardNumber"
            android:background="@drawable/bg_edit_text"
            android:ems="1"
            android:fontFamily="@font/cairo_bold"
            android:hint="الوزن"
            android:inputType="number"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:scaleType="centerCrop"
            android:textColor="@color/Patient_Color"
            android:textColorHint="#78909C"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/Sing_up_1_tall"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/Sing_up_1_wehigt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:autofillHints="creditCardNumber"
            android:background="@drawable/bg_edit_text"
            android:ems="1"
            android:fontFamily="@font/cairo_bold"
            android:hint="الطول"
            android:inputType="number"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:scaleType="centerCrop"
            android:textColor="@color/Patient_Color"
            android:textColorHint="#78909C"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/Sing_up_1_ID"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/Sing_up_1_tall"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:autofillHints="creditCardNumber"
            android:background="@drawable/bg_edit_text"
            android:ems="1"
            android:fontFamily="@font/cairo_bold"
            android:hint="رقم الهوية"
            android:inputType="number"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:scaleType="centerCrop"
            android:textColor="@color/Patient_Color"
            android:textColorHint="#78909C"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_next_S"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_50sdp"
        android:background="@drawable/float_action_btn"
        android:drawableStart="@drawable/ic_float_action"
        android:elevation="10dp"
        android:paddingHorizontal="@dimen/_20sdp"
        android:scaleType="centerCrop"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>