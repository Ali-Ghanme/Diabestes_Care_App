<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.Patient_all.Sections.Reports.Graphs_Fragment">

    <RelativeLayout
        android:id="@+id/Subject"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="@dimen/_4sdp">

            <Button
                android:id="@+id/btn_week"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btnext"
                android:backgroundTint="@color/Patient_Color"
                android:fontFamily="@font/cairo_bold"
                android:text="  فحص اسبوعي  "
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp" />

            <Button
                android:id="@+id/btn_day"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="@drawable/btnext"
                android:backgroundTint="@color/Patient_Color"
                android:fontFamily="@font/cairo_bold"

                android:text=" فحص يومي  "
                android:textColor="@color/white"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graphview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/liner"
            android:visibility="visible"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="5dp" />


        <TextView
            android:id="@+id/mohammed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:fontFamily="@font/cairo_bold"
            android:layoutDirection="rtl"
            android:text="@string/information_examine"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            android:visibility="gone" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>