<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="?attr/bg_background"
    android:paddingBottom="@dimen/_10sdp">

    <ImageView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_75sdp"
        android:background="@drawable/ic_no_wifi" />

    <TextView
        android:id="@+id/et_titlee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_1sdp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/cairo_bold"
        android:text=" لا يوجد اتصال بانترنت حاليا "
        android:padding="@dimen/_10sdp"
        android:textColor="@color/Patient_Color"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/et_subject2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_1sdp"
        android:fontFamily="@font/cairo_bold"
        android:layout_gravity="center_horizontal"
        android:text="يمكنك تجربة الميزات التي لا تحتاج اتصال انترنت \n _ تصفح قسم العناية الذاتية \n _ اضافة منبه لجرعات  \n _ ادخال قراءات فحص السكر في الدم \n _ اضافة التقارير الدورية وتخزينها"
        android:maxLines="50"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/gray"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Continue"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/news_rectangel"
        android:backgroundTint="@color/text_input_pa"
        android:fontFamily="@font/cairo_bold"
        android:text="الاستمرار"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FC_grid_1_p" />
</LinearLayout>