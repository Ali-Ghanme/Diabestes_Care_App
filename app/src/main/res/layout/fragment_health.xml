<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Doctor_Color"
    android:orientation="vertical"
    tools:context=".Ui.Patient_all.Fragment.healthFragment">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"
       >

        <TextView
            android:id="@+id/health_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/cairo_bold"
            android:text="صحتى"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/profile_img_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/todo"
            android:elevation="3dp"
            android:src="@drawable/ic_user_nav"
           />

        <ImageView
            android:id="@+id/notification_img_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/todo"
            android:elevation="3dp"
            android:src="@drawable/ic_notification"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/health_home_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="50dp"
        android:background="@drawable/rectangel_home"
       >

        <TextView
            android:id="@+id/health_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/bg_text_dr"
            android:fontFamily="@font/cairo_regular"
            android:layoutDirection="rtl"
            android:padding="@dimen/_20sdp"
            android:text="يمكنك وضع منبه للتذكير بجرعات
 العلاج يمكنك اختيار نوع العلاج
الذي تأخذاما حبوب او جرعات انسولين   "
            android:textAlignment="center"
            android:textSize="@dimen/_15sdp" />
    </RelativeLayout>
