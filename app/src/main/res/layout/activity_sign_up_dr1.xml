<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up_dr.sign_up_dr1">
    <RelativeLayout
        android:id="@+id/Sing_up_1_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/bg_sing_up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/cairo_bold"
            android:text="اخبرنا عن نفسك"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Subject"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_360sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Sing_up_1_header">

    <EditText
        android:id="@+id/Sing_up_1_name_dr"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_centerHorizontal="true"
        android:autofillHints="name"
        android:background="@drawable/bg_edit_text"
        android:drawableStart="@drawable/ic_user"
        android:elevation="1.5dp"
        android:fontFamily="@font/cairo_bold"
        android:hint="الاسم باللغة العربية "
        android:inputType="textPersonName"
        android:maxLines="1"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/Patient_Color"
        android:textColorHint="#78909C"
        android:textSize="15sp"
        tools:ignore="TouchTargetSizeCheck" />
        <EditText
            android:id="@+id/Sing_up_1_date_dr"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@id/Sing_up_1_name_dr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:autofillHints="creditCardExpirationDate"
            android:background="@drawable/bg_edit_text"
            android:drawableStart="@drawable/ic_data"
            android:elevation="2dp"
            android:ems="1"
            android:fontFamily="@font/cairo_bold"
            android:hint="تاريخ الميلاد"
            android:inputType="date"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/Patient_Color"
            android:textColorHint="#78909C"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck" />
        <RadioGroup
            android:id="@+id/Sing_up_1_Gender_dr"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_below="@+id/Sing_up_1_date_dr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:checkedButton="@id/male"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/male"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/gender_background_selector"
                android:button="@android:color/transparent"
                android:drawableStart="@drawable/ic_male"
                android:elevation="@dimen/_3sdp"
                android:text="ذكر"
                android:paddingLeft="@dimen/_15sdp"
                android:fontFamily="@font/cairo_bold"
                android:textAlignment="center"
                android:textColor="@drawable/gender_text_selector"
                android:textSize="@dimen/_15sdp"
                app:drawableTint="@drawable/gender_text_selector" />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:background="@drawable/gender_background_selector"
                android:button="@android:color/transparent"
                android:drawableStart="@drawable/ic_female"
                android:elevation="@dimen/_3sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:fontFamily="@font/cairo_bold"
                android:text="أنثى"
                android:textAlignment="center"
                android:textColor="@drawable/gender_text_selector"
                android:textSize="16sp"
                app:drawableTint="@drawable/gender_text_selector" />
        </RadioGroup>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_next_S_dr"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_50sdp"
        android:background="@drawable/float_action_btn"
        android:drawableStart="@drawable/ic_float_action"
        android:elevation="10dp"
        android:paddingHorizontal="@dimen/_20sdp"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>