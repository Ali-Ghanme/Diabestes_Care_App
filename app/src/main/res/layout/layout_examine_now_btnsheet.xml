<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetContier"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:background="#1BA1A1A1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_edit_text"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/_4sdp"
        android:padding="@dimen/_15sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/help">

        <EditText
            android:id="@+id/et_number_suger"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/tv_text"
            android:background="@drawable/bg_edit_text"
            android:drawableLeft="@drawable/ic_add"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableTint="@color/gray"
            android:elevation="@dimen/_1sdp"
            android:fontFamily="@font/cairo_bold"
            android:hint="قم بإدخال نسبة السكر "
            android:inputType="number"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/Doctor_Color"
            android:textColorHint="#78909C"
            android:textSize="13sp"
            tools:ignore="TextFields" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_bold"
            android:paddingBottom="@dimen/_4sdp"
            android:text="فحص وظائف الكلية"
            android:textSize="@dimen/_10sdp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/bg_edit_text"
        android:backgroundTint="@color/white"
        android:elevation="@dimen/_4sdp"
        android:padding="@dimen/_15sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help">

        <TextView
            android:id="@+id/tv_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_bold"
            android:paddingBottom="@dimen/_4sdp"
            android:text="وقت القياس"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_period"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_edit_text"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableTint="@color/gray"
            android:padding="@dimen/_5sdp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/Patient_Color"
            android:textAlignment="textStart"
            android:textSize="@dimen/_13sdp" />



    </RelativeLayout>

</LinearLayout>