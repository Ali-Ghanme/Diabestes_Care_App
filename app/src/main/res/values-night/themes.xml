<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Diabestes_Care_App" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>

        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bg_color">#1d1b1e</item>
        <item name="text_color">#ffffff</item>
        <item name="nav_color_p">#1d1b1e</item>
        <item name="nav_color_d">#1d1b1e</item>
        <item name="nav_selected_one_p">@color/Patient_Color</item>
        <item name="nav_selected_one_d">@color/Doctor_Color</item>
    </style>

    <style name="Theme.Diabestes_Care_App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Diabestes_Care_App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Diabestes_Care_App.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CustomText">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/cairo_bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="MyCustomTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/cairo_bold</item>
        <item name="android:fontFamily">@font/cairo_bold</item>
    </style>
</resources>